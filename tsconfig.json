{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable"]
  },

  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "example",
    "tests"
  ]
}
